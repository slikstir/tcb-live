<div class="choice row">
  <%= f.hidden_field :id %>
  <div class="col-sm-1"></div>

  <div class="col-sm-1">
    <%= f.select :sort, ("A".."Z").to_a, hide_label: true, required: true %>
  </div>

  <div class="col">
    <%= f.file_field :image, hide_label: true %>
    <% if f.object.image.attached? %>
        <%= image_tag rails_public_blob_url(f.object.image), class: "img-fluid mb-3", style: "" %>
          <%= f.check_box :remove_image, {}, "1", "0"%>
    <% end %>
  </div>

  <div class="col">
    <%= f.text_field :title, hide_label: true, required: true %>
  </div>

  <div class="col">
    <%= f.text_field :subtitle, hide_label: true %>
  </div>

  <div class="col-sm-1 text-end">
    <button type="button" class="btn btn-danger btn-sm" data-action="click->choices#remove" data-link-target="choices">
      Remove
    </button>
  </div>

  <%= f.hidden_field :show, value: false %>
  <%= f.hidden_field :_destroy, class: "destroy-flag" %>
</div>
