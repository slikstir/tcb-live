
<div class="d-flex flex-column">
  <!-- Row 1: Text -->
  <div class="container-fluid template-heading py-3">
    <p class="h1 text-center">
      Vote
    </p>
  </div>

  <div class="container-fluid template-light-page p-0 text-center">
    <div class="text-center mx-auto">
      Logo Here
    </div>
  </div>


  <div class="container-fluid template-dark-page d-flex flex-column fill-remaining align-items-center">
    <div class="mt-3 ">
        <p class="h5 text-center mb-0 pb-0">
          Subtitle Text Here
        </p>
      <p class="h1 text-center">
        Question Text Goes Here
      </p>
    </div>
    

      <!-- vote form -->
    <div class="poll-form px-2" action="/votes" accept-charset="UTF-8" method="post">
    
        <div class="d-grid gap-2" id="choice-buttons">
          
          <div class="d-flex align-items-center position-relative">
            <label for="vote_choice_5" class="choice-label mb-0 d-flex align-items-center">
              <%= image_tag "preview_face.jpeg", class: "rounded-circle me-3", style: "max-height: 100%; height: auto; max-width: 70px;" %>
            </label>

            <input class="visually-hidden" id="vote_choice_5" required="required" type="radio" value="5" name="vote[choice_id]">

            <label for="vote_choice_5" class="mb-0 text-center btn template-btn-choice btn-lg w-100 choice-label">
              <div class="fw-bold text-uppercase template-btn-choice-title">Title</div>
              <div class="template-btn-choice-subtitle text-uppercase small">And here's a subtitle</div>
            </label>
          </div>



            <div class="d-flex align-items-center position-relative">
              <label for="vote_choice_6" class="mb-0 text-center btn template-btn-choice btn-lg w-100 choice-label">
                <div class="fw-bold text-uppercase template-btn-choice-title">Title Only</div>
              </label>
            </div>
            <div class="d-flex align-items-center position-relative">

              <input class="visually-hidden" id="vote_choice_9" required="required" type="radio" value="9" name="vote[choice_id]">

              <label for="vote_choice_9" class="mb-0 text-center btn template-btn-choice btn-lg w-100 choice-label">
                <div class="fw-bold text-uppercase template-btn-choice-title">Title and Subtitle</div>
                <div class="template-btn-choice-subtitle text-uppercase small">But no picture</div>
              </label>
            </div>
        </div>

        <div class="mt-3 mb-2">
          <input type="submit" name="commit" value="Vote" class="btn template-btn-vote btn-lg w-100" disabled="disabled" id="vote-submit" data-disable-with="Vote">
        </div>
      </div>

      <!-- end vote form -->

  </div>
</div>