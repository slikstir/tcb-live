<style>
  .template-heading {
    background-color: <%= template.heading_bg_color %>;
    color: <%= template.heading_text_color %>;

    <% if template.font_family_1 %>
      font-family: <%= raw template.font_family_1 %>;
    <% end %>
  }

  .template-btn-choice {
    background-color: <%= template.choice_color %>;
    border-color: <%= template.choice_outline %>;
    color: <%= template.choice_title_color %>;
    
  }
  
  .icon-inherit {
    color: inherit;
    width: 100px !important;
    height: 100px !important;
  }

  .icon-inherit path {
    fill: currentColor;
  }

  .template-btn-choice-title {
    color: <%= template.choice_title_color %>;

    <% if template.font_family_1 %>
      font-family: <%= raw template.font_family_1 %>;
    <% end %>
  }

  .template-btn-choice-subtitle {
    color: <%= template.choice_subtitle_color %>;

    <% if template.font_family_2 %>
      font-family: <%= raw template.font_family_2 %>;
    <% end %>
  }

  .template-dark-page {
    .h5, .h3, .h2 {
      color: <%= template.dark_page_subtitles %>;
      
      <% if template.font_family_2 %>
        font-family: <%= raw template.font_family_2 %>;
      <% end %>
    }
    .h1 {
      color: <%= template.dark_page_titles %>;
    }

    <% if template.dark_page_bg.attached? %>
      background-image: url(<%= url_for(template.dark_page_bg) %>);
    <% end %>

    background-color: <%= template.dark_page_bg_color %>;

    <% if template.font_family_1 %>
      font-family: <%= raw template.font_family_1 %>;
    <% end %>
  }


  .template-light-page {
     .h5, .h3, .h2 {
      color: <%= template.light_page_subtitles %>;

      <% if template.font_family_2 %>
        font-family: <%= raw template.font_family_2 %>;
      <% end %>
    }
    
    .h1 {
      color: <%= template.light_page_titles %>;
    }

    <% if template.light_page_bg.attached? %>
      background-image: url(<%= url_for(template.light_page_bg) %>);
    <% end %>

    background-color: <%= template.light_page_bg_color %>;

    <% if template.font_family_1 %>
      font-family: <%= raw template.font_family_1 %>;
    <% end %>
  }

  .template-btn-vote {
    background-color: <%= template.vote_color %>;
    border-color: <%= template.vote_outline_color %>;
    color: <%= template.vote_text_color %>;
  }

  .template-btn-log-out {
    background-color: <%= template.log_out_color %>;
    border-color: <%= template.log_out_outline_color %>;
    color: <%= template.log_out_text_color %>;
  }

  .template-btn-log-out:hover {
    background-color: <%= template.log_out_color %>;
    border-color: <%= template.log_out_outline_color %>;
    color: <%= template.log_out_text_color %>;
  }

</style>