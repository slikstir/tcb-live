<%== pagy_bootstrap_nav(@pagy) %>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th style="width: 200px" class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @attendees.each do |attendee| %>
        <tr>
          <td><%= attendee.name %></td>
          <td><%= attendee.email %></td>
          <td class="text-end">
            <%= link_to admin_attendee_path(attendee), class: "btn btn-sm btn-success" do %>
              <%= icon 'folder-open', class: 'icon-text-white' %>
            <% end %>
            <%= link_to edit_admin_attendee_path(attendee), class: "btn btn-sm btn-warning"  do  %>
              <%= icon 'edit', class: 'icon-text-white' %>
            <% end %>
            <%= link_to admin_attendee_path(attendee), method: :delete, 
                      data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" do %>
              <%= icon 'trash', class: 'icon-text-white' %>
            <% end %>        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%== pagy_bootstrap_nav(@pagy) %>