<div class="container mt-5" id="versus-voting" data-controller="versus">
  <% @poll.choices.each do |choice| %>
    <div class="row mb-3">
        <div class="col-12 d-flex align-items-center">
        <button 
          class="btn btn-lg template-btn-choice versus-button w-100" 
          data-choice-id="<%= choice.id %>" 
          data-poll-id="<%= @poll.id %>" 
          data-action="click->versus#vote">
          <%= choice.title %>
        </button>
      </div>
    </div>
  <% end %>
  <div class="text-center mt-3">
    <p data-versus-target="feedback" class="text-warning h5">Tap to vote!</p>
  </div>
</div>